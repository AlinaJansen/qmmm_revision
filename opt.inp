+system
   name opt
   geometry ./opt.xyz
   method dft
   +dft
       functional BP86
   -dft
   charge 0
   spin 0.0
   +basis
       label STO-3G
   -basis
   +grid
       accuracy 6
       smallGridAccuracy 3
   -grid
   +extcharges
       externalChargesFile pointcharges.pc
   -extcharges
   +scf
       initialguess EHT
   -scf
-system
+lrscf
   act opt
   nEigen 5
-task
+task GradientTask
   system opt
-task
+task pop
   act opt
   algorithm Hirshfeld
-task
